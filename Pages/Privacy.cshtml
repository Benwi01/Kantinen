@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<style>
    /* General Body Styling */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #fafafa;
        color: #333;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
        margin: 0;
    }

    /* Title Styling */
    h1 {
        color: #f26b38; /* Warm orange */
        font-size: 3em;
        margin-bottom: 20px;
    }

    h2 {
        color: #1f8a70; /* Teal */
        margin-top: 10px;
        font-size: 1.5em;
    }

    /* Paragraph Styling */
    p {
        font-size: 1.2em;
        color: #333;
        line-height: 1.6;
        max-width: 800px;
        margin: 20px auto;
        text-align: center;
    }

    /* Footer Styling */
    .footer {
        margin-top: 40px;
        font-size: 0.9em;
        color: #6c757d;
    }
</style>

<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<!-- Footer (if applicable) -->
<div class="footer">© Kantinens menu, Uge 45</div>
