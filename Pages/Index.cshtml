@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-2">Kantinens menu</h1>
</div>

<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        /* General Body Styling */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #fafafa;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            margin: 0;
        }

        /* Title Styling */
        h1 {
            color: #f26b38; /* Warm orange */
            font-size: 3em;
            margin-bottom: 20px;
        }

        h2 {
            color: #1f8a70; /* Teal */
            margin-top: 10px;
            font-size: 1.5em;
        }

        /* Table Styling */
        table {
            width: 90%;
            max-width: 900px;
            margin: 30px auto;
            border-collapse: collapse;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
        }

        th, td {
            padding: 20px;
            text-align: left;
            font-size: 1.1em;
            border: 1px solid #ddd;
        }

        th {
            background-color: #f26b38; /* Warm orange */
            color: white;
            font-weight: bold;
            text-transform: uppercase;
        }

        /* Row Styling */
        tr:nth-child(even) {
            background-color: #e7f1f1; /* Light teal */
        }

        tr:nth-child(odd) {
            background-color: #ffffff;
        }

        /* Footer Styling */
        .footer {
            margin-top: 40px;
            font-size: 0.9em;
            color: #6c757d;
        }
    </style>
</head>
<body>

    <table>
        <thead>
            <tr>
                <th>Dag</th>
                <th>Varm Ret</th>
                <th>Kold Ret</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.MenuItems)
            {
                <tr>
                    <td>@item.Dag</td>
                    <td>@item.Varmret</td>
                    <td>@item.Koldret</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>

